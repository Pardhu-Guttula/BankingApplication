{
  "epic_id": "EPIC-1",
  "epic_title": "User Authentication and Security",
  "test_cases": [
    {
      "test_case_id": "TC-1",
      "description": "Test home page loads correctly",
      "steps": [
        "Send GET request to /",
        "Assert status code is 200",
        "Assert 'Welcome to the Banking Application!' is in response data"
      ],
      "expected_result": "Home page loads with welcome message"
    },
    {
      "test_case_id": "TC-2",
      "description": "Test login page loads correctly",
      "steps": [
        "Send GET request to /login",
        "Assert status code is 200",
        "Assert 'Please login' is in response data"
      ],
      "expected_result": "Login page loads with prompt"
    },
    {
      "test_case_id": "TC-3",
      "description": "Test user can login",
      "steps": [
        "Send POST request to /login with valid credentials",
        "Assert status code is 200",
        "Assert 'Login successful' is in response data"
      ],
      "expected_result": "User logs in successfully"
    },
    {
      "test_case_id": "TC-4",
      "description": "Test user can logout",
      "steps": [
        "Send POST request to /login with valid credentials",
        "Send GET request to /logout",
        "Assert status code is 200",
        "Assert 'You have been logged out' is in response data"
      ],
      "expected_result": "User logs out successfully"
    }
  ]
}
